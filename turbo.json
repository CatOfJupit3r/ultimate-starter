{
	"$schema": "https://turbo.build/schema.json",
	"ui": "stream",
	"globalDependencies": ["bun.lockb", "package.json", "turbo.json"],
	"globalEnv": ["MONGOMS_DOWNLOAD_MIRROR"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"test": {
			"dependsOn": ["^build", "^test"],
			"outputs": []
		},
		"dev": {
			"dependsOn": ["@startername/shared#build"],
			"cache": false,
			"persistent": true
		},
		"prettier": {
			"dependsOn": ["^prettier"]
		}
	}
}
